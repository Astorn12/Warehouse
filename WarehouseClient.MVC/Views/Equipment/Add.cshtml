@model WarehouseGrpc.EquipmentToAdd
@{
    ViewData["Title"] = "Add";
}
<div class="container" >
  <h2>Add equipment</h2>
<form class="form-horizontal" asp-controller="Equipment" 
asp-action="Add" method="post">

<div class="form-group ">
  <strong>
<label class="control-label col-sm-2" asp-for="Name">Nazwa:</label>
</strong>
    <div class="col-sm-5"> 
<input  class="form-control" asp-for="Name">
</div>
</div>

<div class="form-group">
  <strong>
<label class="control-label col-sm-2" asp-for="SerialNumber">Serial Number:</label>
  </strong>
 
<div class="col-sm-5">     
<input  class="form-control" asp-for="SerialNumber">
</div>
</div>


<div class="form-group">
  <strong>
<label class="control-label col-sm-2" asp-for="Type">Type:</label>
</strong>
<div class="col-sm-5">     
  <select class="form-control" asp-for="Type" id="exampleFormControlSelect1">
     
    @foreach (var item in(WarehouseGrpc.EquipmentType[]) Enum.GetValues(typeof(WarehouseGrpc.EquipmentType)) )
    {
     <option >@Html.DisplayFor(x=>item)</option>
    }
    </select>
    <div class="col-sm-5">     
   
</div>




 <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10 mt-5">
    <button type="Submit" type="button" class="btn btn-success">Submit</button>
</div>
</div>
    </form>
    </div>
     

     @if (ViewBag.Message != null)  
    {  
        <script type="text/javascript">  
            window.onload = function () {  
                alert("@ViewBag.Message");  
            };  
        </script>  
    }  


    